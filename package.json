{
  "name": "mes-documents-service",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "Microservice responsible for responsible for generating documents, such as test results for Candidates.",
  "homepage": "https://github.com/dvsa/mes-documents-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-documents-service"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "test": "npm run compile && jasmine",
    "test:jasmine-coverage": "nyc npm run test",
    "start": "npm run compile && sls offline start",
    "prepare": "husky install"
  },
  "dependencies": {
    "@dvsa/mes-microservice-common": "0.8.3",
    "axios": "^0.27.2",
    "bottleneck": "^2.19.5",
    "inversify": "6.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "notifications-node-client": "^5.1.2"
  },
  "devDependencies": {
    "@dvsa/mes-test-schema": "3.41.0",
    "@types/aws-lambda": "^8.10.106",
    "@types/jasmine": "^4.3.0",
    "@types/node": "^16.10.2",
    "@types/sinon": "^10.0.13",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "aws-lambda-test-utils": "^1.3.0",
    "aws-sdk": "^2.1229.0",
    "eslint": "^8.24.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jasmine": "^4.4.0",
    "jasmine-spec-reporter": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "serverless": "^3.22.0",
    "serverless-offline": "^11.0.1",
    "serverless-offline-http-mock": "1.0.0",
    "serverless-webpack": "^5.10.0",
    "sinon": "^14.0.1",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "typemoq": "^2.1.0",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-documents-service/issues"
  }
}
