{
  "name": "mes-documents-service",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "Microservice responsible for responsible for generating documents, such as test results for Candidates.",
  "homepage": "https://github.com/dvsa/mes-documents-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-documents-service"
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-documents-service/issues"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "test": "npm run compile && jasmine",
    "test:jasmine-coverage": "nyc npm run test",
    "start": "npm run compile && sls offline start",
    "prepare": "husky install"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.338.0",
    "@dvsa/mes-microservice-common": "0.8.3",
    "axios": "^1.4.0",
    "bottleneck": "^2.19.5",
    "inversify": "6.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "notifications-node-client": "^7.0.0",
    "reflect-metadata": "^0.1.3"
  },
  "devDependencies": {
    "@dvsa/mes-test-schema": "3.41.1",
    "@types/aws-lambda": "^8.10.115",
    "@types/jasmine": "^4.3.1",
    "@types/node": "^18.11.0",
    "@types/sinon": "^10.0.15",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "aws-lambda-test-utils": "^1.3.0",
    "eslint": "^8.41.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jasmine": "^5.0.0",
    "jasmine-spec-reporter": "^7.0.0",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.1",
    "serverless": "^3.31.0",
    "serverless-offline": "^12.0.4",
    "serverless-offline-http-mock": "1.0.0",
    "serverless-webpack": "^5.11.0",
    "sinon": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typemoq": "^2.1.0",
    "typescript": "^5.0.4",
    "webpack": "^5.84.0",
    "webpack-cli": "^5.1.1",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "npm run lint:fix"
    ]
  }
}
