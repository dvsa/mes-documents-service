{
  "name": "mes-documents-service",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "Microservice responsible for responsible for generating documents, such as test results for Candidates.",
  "homepage": "https://github.com/dvsa/mes-documents-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-documents-service"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "security-scan": "git secrets --scan",
    "test": "npm run compile && jasmine",
    "test:jasmine-coverage": "nyc npm run test",
    "start": "npm run compile && sls offline start"
  },
  "dependencies": {
    "@dvsa/mes-microservice-common": "0.7.0",
    "axios": "^0.23.0",
    "bottleneck": "^2.19.5",
    "inversify": "6.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "notifications-node-client": "^5.1.2"
  },
  "devDependencies": {
    "@dvsa/mes-test-schema": "3.39.4",
    "@types/aws-lambda": "^8.10.92",
    "@types/jasmine": "^3.10.3",
    "@types/node": "^14.17.5",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "aws-lambda-test-utils": "^1.3.0",
    "aws-sdk": "^2.1080.0",
    "eslint": "^8.9.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^1.3.1",
    "jasmine": "^3.99.0",
    "jasmine-spec-reporter": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "serverless": "^3.21.0",
    "serverless-offline": "^8.7.0",
    "serverless-offline-http-mock": "0.0.4",
    "serverless-webpack": "^5.6.1",
    "sinon": "^11.1.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typemoq": "^2.1.0",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run security-scan && npm run lint && npm test",
      "pre-commit": "run-s lint:fix lint compile-no-emit"
    }
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-documents-service/issues"
  }
}
